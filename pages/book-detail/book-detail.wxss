.container{
  background-color: #f5f5f5;
  width: 100%;
}
.header{
  background-color: #fff;
  padding: 40rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  color:#2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.author{
  font-size: 28rpx;
  color: #999;
}
.header image{
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline{
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}
.content{
  text-indent: 58rpx;
 font-weight: 500;
}

.comments-container{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.comments-container v-tag{
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.comments-container v-tag .num{
  margin-left: 5rpx;
  color: #aaa;
  font-size: 22rpx;
}

/* 外部css样式 */
.tag-class1{
  background-color: #fffbdd !important;
}

.tag-class2{
  background-color: #eefbff !important;
}