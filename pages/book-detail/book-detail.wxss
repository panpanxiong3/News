.container{
  background-color: #f5f5f5;
  width: 100%;
}
.header{
  background-color: #fff;
  padding: 40rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  color:#2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.author{
  font-size: 28rpx;
  color: #999;
}
.header image{
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline{
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}
.content{
  text-indent: 58rpx;
 font-weight: 500;
}

.comments-container{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.comments-container v-tag{
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.comments-container v-tag .num{
  margin-left: 5rpx;
  color: #aaa;
  font-size: 22rpx;
}

/* 外部css样式 */
.tag-class1{
  background-color: #fffbdd !important;
}

.tag-class2{
  background-color: #eefbff !important;
}

.detail-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color:#666;
}
/* 书本信息 */
.vertical{
display: flex;
flex-direction: column;
}

.description{
  color:#999;
  margin-right: 30rpx;
}

/* 输入短评 */
.post-container{
  height: 100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  position: fixed;
  width: 690rpx;
  background-color: #fff;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}

.post-fake{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border:1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}
.like{
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.like-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}